  <%= render 'details/header' %>
<br>
	<% @details.each do |detail| %>
<br />	

	<div class="container">
	      <div class="row-fluid">
	         <div class="span8">
	            <div class="list">

		<table class="table">
			<tr>
				<td><center><img src="/images/glyphicons_169_phone.png" alt="8" /> Phone: </td>
				<td><b><%= detail.phone %></td>
			</tr>
			<tr>
				<td><center><i class="icon-envelope"></i> Email: </td>
				<td><b><%= detail.email %></td>
			</tr>
			<tr>
				<td><center><i class="icon-home"></i> Address: </td>
				<td><b><%= detail.addr1 %>, <%= detail.addr2 %>, <%= detail.addr3 %>, <%= detail.postcode %></b></td>	
			</tr>
			<tr>
				<td><center><i class="icon-arrow-right"></i> Website: </td>
				<td><b><%= detail.url %></td>
			</tr>
			<tr>
				<td><center><i class="icon-star-empty"></i> About Us:</td>
				<td><b><%= detail.blurb1 %></td>	
			</tr>
			<tr>	
				<td><center><i class="icon-user"></i> Contact: </td>
				<td><b><%= detail.contactname %></td>
			</tr>
			</table>
	<% end%>
	<div>
		<div>
			<div>
				<div>
	
	<br>
	<p>
	  <button class="btn btn-small" type="button"><%= link_to 'Edit Details', edit_detail_path(@details) %></button>
	</p>
		
	 
	