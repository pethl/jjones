<table class="table">
  <tr>
    <th>Group</th>
    <th>Name</th>
    <th>Size</th>
    <th>Unitprice</th>
    <th>Itemcount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.group %></td>
    <td><%= product.name %></td>
    <td><%= product.size %></td>
    <td><%= product.unitprice %></td>
    <td><%= product.itemcount %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<button class="btn btn-small" type="button"><%= link_to 'Add product', new_product_path %></button>


