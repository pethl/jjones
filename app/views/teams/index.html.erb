         	  <li><%= link_to "Home", :home %></li>
	          <li><%= link_to "About", :about %></li>
	    		<li class="active"><%= link_to "People", teams_path %></li> 
					<li><%= link_to "Products", teams_path %></li> 
		
        </ul>
        <h3 class="muted">J. Jones & Son (Dairies) Ltd</h3>
      </div>
   
      <hr>

<br><br>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Role</th>
    <th>Start</th>
    <th>End</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.role %></td>
    <td><%= team.start.strftime("%d %B, %Y") %></td>
    <td><%= team.end.strftime("%d %B, %Y") %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

